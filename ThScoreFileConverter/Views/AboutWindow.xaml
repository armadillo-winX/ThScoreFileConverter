<UserControl x:Class="ThScoreFileConverter.Views.AboutWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:ThScoreFileConverter.Commands"
             FocusManager.FocusedElement="{Binding ElementName=Link}">

    <UserControl.InputBindings>
        <KeyBinding Command="{x:Static c:CloseWindowCommand.Instance}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Key="Escape"/>
    </UserControl.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Height="48"
               Margin="10"
               Source="{Binding Icon}"
               VerticalAlignment="Top"
               Width="48" />
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="10"
                   TextWrapping="Wrap">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Version}"/>
            <LineBreak/>
            <TextBlock Text="{Binding Copyright}"/>
            <LineBreak/>
            <Hyperlink x:Name="Link"
                       Command="{Binding OpenUriCommand}"
                       CommandParameter="{Binding Uri}">
                <TextBlock Text="{Binding Uri}"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>
