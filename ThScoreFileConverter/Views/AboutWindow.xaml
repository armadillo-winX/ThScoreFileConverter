<Window x:Class="ThScoreFileConverter.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About this tool" Height="120" Width="320" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" PreviewKeyDown="Window_PreviewKeyDown" Style="{DynamicResource WindowStyleKey}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="imgIcon" Height="48" Margin="10" Width="48" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" Margin="10" TextWrapping="Wrap" Grid.ColumnSpan="2">
            <TextBlock x:Name="txtName"></TextBlock>
            <TextBlock x:Name="txtVersion"></TextBlock>
            <LineBreak/>
            <TextBlock x:Name="txtCopyright"></TextBlock>
            <LineBreak/>
            <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="http://www.colorless-sight.jp/">http://www.colorless-sight.jp/</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
