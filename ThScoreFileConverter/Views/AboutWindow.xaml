<Window x:Class="ThScoreFileConverter.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ThScoreFileConverter.ViewModels"
        Title="{Binding Title}" Height="120" Width="320" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" PreviewKeyDown="Window_PreviewKeyDown" Style="{DynamicResource WindowStyleKey}">
    <Window.DataContext>
        <vm:AboutWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Height="48" Margin="10" Width="48" VerticalAlignment="Top" Source="{Binding Icon}"/>
        <TextBlock Grid.Column="1" Margin="10" TextWrapping="Wrap" Grid.ColumnSpan="2">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Version}"/>
            <LineBreak/>
            <TextBlock Text="{Binding Copyright}"/>
            <LineBreak/>
            <Hyperlink Command="{Binding OpenUriCommand}" CommandParameter="{Binding Uri}">
                <TextBlock Text="{Binding Uri}"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
