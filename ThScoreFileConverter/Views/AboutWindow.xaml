<Window x:Class="ThScoreFileConverter.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ThScoreFileConverter.ViewModels"
        Height="120"
        PreviewKeyDown="Window_PreviewKeyDown"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Style="{DynamicResource WindowStyleKey}"
        Title="{Binding Title}"
        Width="320"
        WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <vm:AboutWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Height="48"
               Margin="10"
               Source="{Binding Icon}"
               VerticalAlignment="Top"
               Width="48" />
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="10"
                   TextWrapping="Wrap">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Version}"/>
            <LineBreak/>
            <TextBlock Text="{Binding Copyright}"/>
            <LineBreak/>
            <Hyperlink Command="{Binding OpenUriCommand}"
                       CommandParameter="{Binding Uri}">
                <TextBlock Text="{Binding Uri}"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
