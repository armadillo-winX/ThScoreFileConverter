<Window x:Class="ThScoreFileConverter.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="340" Width="420" Style="{DynamicResource WindowStyleKey}" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="63"/>
            <RowDefinition Height="106"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="フォント設定">
            <Grid>
                <TextBox x:Name="txtFontInfo" Text="{DynamicResource FontInfoKey}" Margin="10,10,0,0" HorizontalAlignment="Left" Width="190" IsReadOnly="True" Height="25" VerticalAlignment="Top"/>
                <Button x:Name="btnFontChange" Content="変更(_C)..." Margin="0,10,90,0" Click="BtnFontChange_Click" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                <Button x:Name="btnFontReset" Content="リセット(_R)" Margin="0,10,10,0" Click="BtnFontReset_Click" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="出力書式設定" Grid.Row="1">
            <Grid>
                <CheckBox x:Name="chkOutputNumberGroupSeparator" Content="数値を桁区切り形式で出力する(_S)" HorizontalAlignment="Left" Margin="10,10,0,0" Height="18" VerticalAlignment="Top" IsChecked="True"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="文字エンコーディング設定" Grid.Row="2">
            <Grid>
                <Label Content="入力ファイル(_I):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="cmbInputEncoding" Margin="0,12,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="155" SelectionChanged="CmbInputEncoding_SelectionChanged"/>
                <Label Content="出力ファイル(_O):" HorizontalAlignment="Left" Margin="10,43,0,0" Height="28" VerticalAlignment="Top"/>
                <ComboBox x:Name="cmbOutputEncoding" HorizontalAlignment="Right" Margin="0,45,10,0" VerticalAlignment="Top" Width="155" SelectionChanged="CmbOutputEncoding_SelectionChanged"/>
            </Grid>
        </GroupBox>
        <Button x:Name="btnOK" Content="OK" Margin="0,10,0,0" Grid.Row="3" Height="25" VerticalAlignment="Top" IsDefault="True" Click="BtnOK_Click" HorizontalAlignment="Center" Width="75"/>
    </Grid>
</Window>
